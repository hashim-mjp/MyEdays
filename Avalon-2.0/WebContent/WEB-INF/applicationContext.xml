	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://localhost:3306/edays1" />
		<property name="username" value="root" />
		<property name="password" value="root" />
	</bean>

	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource" ref="dataSource"></property>
		<property name="annotatedClasses"><!-- hibernate mapping -->
			<list>

				<!-- pojos from employeepojos folder -->
				<value>com.ms.avalon.master.pojos.employeepojos.EmployeeMasterPojo</value>
				<value>com.ms.avalon.master.pojos.employeepojos.BranchMasterPojo</value>
				<!-- pojos from pojos folder -->
				<value>com.ms.avalon.master.pojos.LeaveMasterPojo</value>
				<value>com.ms.avalon.master.pojos.LeaveDetailsPojo</value>
				<value>com.ms.avalon.master.pojos.EmpHierarchyPojo</value>
				<value>com.ms.avalon.master.pojos.ColorTablePojo</value>
				<value>com.ms.avalon.master.pojos.EmpMasterPojo</value>
				<value>com.ms.avalon.master.pojos.LoginTablePojo</value>
				<value>com.ms.avalon.master.pojos.FestivalMasterPojo</value>
				<value>com.ms.avalon.master.pojos.AttendanceMasterPojo</value>
				<value>com.ms.avalon.master.pojos.LeaveRulesPojo</value>
				<value>com.ms.avalon.master.pojos.LeaveTypePojo</value>
				<value>com.ms.avalon.master.pojos.EmpEduDetailsPojo</value>
				<value>com.ms.avalon.master.pojos.DocMasterPojo</value>
				<value>com.ms.avalon.master.pojos.EmpEmployerPojo</value>
				
				<value>com.ms.avalon.master.pojos.Test1Pojo</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.current_session_context_class">thread</prop>
			</props>
		</property>
	</bean>



